    <!-- 安全管理器 -->
    <!--securityManager是shiro的核心，初始化时协调各个模块运行-->
    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
        <!--单个realm使用realm,如果有多个realm，使用realms属性代替-->
        <property name="realm" ref="userRealm"/>
        <property name="sessionManager" ref="sessionManager"/>
        <!--<property name="rememberMeManager" ref="rememberMeManager"/>-->
    </bean>

    <!-- 相当于调用SecurityUtils.setSecurityManager(securityManager) -->
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="staticMethod" value="org.apache.shiro.SecurityUtils.setSecurityManager"/>
        <property name="arguments" ref="securityManager"/>
    </bean>

    <!-- Shiro的Web过滤器 -->
    <bean id="shiroFilterChainManager" class="com.yjh.demo.core.shiro.ShiroFilterChainManager"/>

    <bean id="filterChainManager" class="com.yjh.demo.core.shiro.CustomDefaultFilterChainManager">
        <property name="loginUrl" value="/"/>
        <property name="successUrl" value="/logined"/>
        <property name="unauthorizedUrl" value="/error"/>
    </bean>

    <bean id="filterChainResolver" class="com.yjh.demo.core.shiro.CustomPathMatchingFilterChainResolver">
        <property name="customDefaultFilterChainManager" ref="filterChainManager"/>
    </bean>

    <!--shiro过滤器配置，bean的id值须与web中的filter-name的值相同-->
    <bean id="shiroFilter" class="com.yjh.demo.core.shiro.ShiroFilterFactoryManagerBean">
        <property name="securityManager" ref="securityManager"/>
        <property name="filterChainResolver" ref="filterChainResolver"/>
    </bean>

